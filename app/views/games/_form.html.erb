<%= form_for game, html: {class: 'form-horizontal'} do |f| %>

<% if game.errors.any? %>

<div class="alert alert-danger">

<ul>

<% game.errors.full_messages.each do |message| %>
<li> <%= message %> </li>

<% end %>

</ul>
</div>
<% end %>


 <div class="form-group">

  <%= f.label :title, "Title", class: 'col-md-4 control-label' %>
  <div class="col-md-8">

   <%= f.text_field :title, class: 'form_control'%>

  </div>
  </div>


  <div class="form-group">

  <%= f.label :avatar_file, "Avatar", class: 'col-md-4 control-label' %>
  <div class="col-md-8">

   <%= f.file_field :avatar_file, class: 'form_control'%>

  </div>
  </div>


  <div class="form-group">

  <%= f.label :category_id, "Category", class: 'col-md-4 control-label' %>
  <div class="col-md-8">

   <%= f.select :category_id, Category.pluck(:name,  :id),{}, class: 'form_control multiple = "multiple"' %>

  </div>
  </div>


  <div class="form-group">

  <%= f.label :test, "thoughts", class: 'col-md-4 control-label' %>
  <div class="col-md-8">

   <%= f.text_area :test, class: 'form_control' %>

  </div>
  </div>

  <div class="form-group">

  <%= f.label :release_date, "Release Date", class: 'col-md-4 control-label' %>
  <div class="col-md-8">

   <%= f.text_field :release_date, class: 'form_control', data: {behavior: 'flatpickr' } %>

  </div>
  </div>




  <div class="form-group">


    <div class="col-md-offset-4 col-md-6">
      <button type="submit" class="btn btn-ghost" style="background-image: linear-gradient(to right top, #04080d, #1f2043, #681d62, #b90053, #eb1212); color: white;">
        <%= game.new_record? ? 'Add' : 'Update' %>
      </button>





    </div>
  </div>

<% end %>
