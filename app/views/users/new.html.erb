<% if @user.errors.any? %>

<div class="alert alert-danger">

<ul>

<% @user.errors.full_messages.each do |message| %>
<li> <%= message %> </li>

<% end %>

</ul>
</div>
<% end %>





<div class="panel panel-default">
<div class="panel-heading">Register</div>
<div class="panel-body">

  <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>


  <% if @user.avatar %>


<%= image_tag @user.avatar_url,  :class => "style_avatar"%>

<% end %>

<div class="form-group">

  <%= f.label :avatar_file, "Avatar", class: 'col-md-4 control-label' %>
  <div class="col-md-6">

   <%= f.file_field :avatar_file , class: 'form_control' %>

  </div>
  </div>

  <div class="form-group">

  <%= f.label :username, "Username", class: 'col-md-4 control-label' %>
  <div class="col-md-6">

   <%= f.text_field :username, class: 'form_control' %>

  </div>
  </div>

   <div class="form-group">

  <%= f.label :email, "Email", class: 'col-md-4 control-label' %>
  <div class="col-md-6">

   <%= f.email_field :email, class: 'form_control' %>

  </div>
  </div>

  <div class="form-group">

  <%= f.label :password, "Password", class: 'col-md-4 control-label' %>
  <div class="col-md-6">

   <%= f.password_field :password, class: 'form_control' %>

  </div>
  </div>


   <div class="form-group">

  <%= f.label :password_confirmation, "Confirm Password", class: 'col-md-4 control-label' %>
  <div class="col-md-6">

   <%= f.password_field :password_confirmation, class: 'form_control' %>

  </div>
  </div>

  <div class="form-group">


    <div class="col-md-offset-4 col-md-6">
      <button type="submit" class="btn btn-ghost">
        Register
      </button>



    </div>
  </div>

  <% end %>

</div>
</div>
